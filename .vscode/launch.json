{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch: Nodemon",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["start"],
      "outputCapture": "std",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach: Nodemon",
      "processId": "${command:PickProcess}"
    }
  ]
}
